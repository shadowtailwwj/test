/* pages/book/book.wxss */
.h1 {
  width: 100%;
  height: 200px;
}
.img {
  width: 130px;
  height: 180px;
  padding: 10px 20px 10px 10px;
  float: left;
}
.t1 {
  float: left;
  padding-top: 10px;
}
.t2 {
  font-size: 24px;
  font-weight: bold;
}
.t3 {
  font-size: 16px;
  color: #666;
}
.t4 {
  padding-top: 15px;
}

.book-mark {
  display: flex;
  margin-bottom: 36rpx;
  margin-left: 10px;
  margin-top: 10px;
}

.mark-item {
  font-size: 28rpx;
  color: #81bcfe;
  border: 2rpx solid #81bcfe;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0rpx 6rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}
.book-summary {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  white-space: pre-wrap;
  margin-left: 10px;
}

.book-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

.common-title {
  color: #00bf60;
  font-size: 30rpx;
}
.book-share {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  margin-top: 10px;
}

.share-item {
  display: flex;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.user-img {
  width: 73rpx;
  height: 73rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.share-addr {
  flex-grow: 1;
  align-items: center;
  display: flex;
}

.share-status {
  width: 101rpx;
  flex-shrink: 0;
  text-align: center;
}
.menu-btn {
  text-align: right;
  display: block;
}

.btn-item {
  height: 118rpx;
  width: 224rpx;
  background-color: #489efd;
  color: #fff;
  font-size: 36rpx;
  line-height: 118rpx;
  text-align: center;
  float: right;
}